{
  "name": "typescript-starter",
  "version": "0.0.0",
  "description": "A starting point for TypeScript & Jest",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "test": "jest --forceExit --verbose",
    "test-coverage": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@types/node": "^10.12.11"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "chai": "^4.2.0",
    "jest": "^23.6.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
